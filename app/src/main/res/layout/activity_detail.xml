<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.detail.DetailActivity">

    <TextView
        android:id="@+id/detail_cardname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail_cardnunber_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카드번호"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/detail_cardname_tv"
        app:layout_constraintTop_toBottomOf="@+id/detail_cardname_tv" />


    <TextView
        android:id="@+id/detail_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유효기간"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/detail_cardnunber_tv"
        app:layout_constraintTop_toBottomOf="@+id/detail_cardnunber_tv" />

    <TextView
        android:id="@+id/detail_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/detail_date_tv"
        app:layout_constraintTop_toBottomOf="@+id/detail_date_tv" />

    <TextView
        android:id="@+id/detail_view_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카드 ViewType : "
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/detail_price_tv"
        app:layout_constraintTop_toBottomOf="@+id/detail_price_tv" />



</androidx.constraintlayout.widget.ConstraintLayout>